{
	"globals": {
		"WScript": false,
		"WSH": false,
		"ActiveXObject": false,
		"Enumerator": false,
		"ArrayList": false,
		"CSV": false,
		"File": false,
		"HashMap": false,
		"Random": false,
		"StringWSH": false,
		"System": false
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2015,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"no-constant-condition": 1,
		"no-unused-vars": 1,
		"no-console": 0,
		"no-var": 0,
		"prefer-const": 2,
		"no-param-reassign": 2
	},
    "plugins": [
    ]
}